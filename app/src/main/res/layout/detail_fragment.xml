<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".details.DetailActivity"
        tools:showIn="@layout/movie_details_activity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_details_title"
            android:textSize="@dimen/title_font_size_25"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="@dimen/margin_bottom_10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movie_details_poster" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_details_overview"/>

        <!--<View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/hline_height"
            android:background="@color/hline"
            android:layout_marginTop="@dimen/margin_top_10dp"
            android:layout_marginBottom="@dimen/margin_bottom_10dp"
            android:id="@+id/hline_top"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_title"
            android:text="@string/label_movie_rating"
            android:textSize="@dimen/title_font_size_15"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/details_title_top_margin"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_details_rating"
            android:numStars="5"
            android:stepSize="0.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/release_date_title"
            android:text="@string/label_movie_release_date"
            android:textSize="@dimen/title_font_size_15"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/details_title_top_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_details_release_date"/>
    </LinearLayout>

</ScrollView>