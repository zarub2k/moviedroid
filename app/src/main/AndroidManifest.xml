<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cloudskol.moviedroid">

    <!-- Permission configuration -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cloudskol.moviedroid.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cloudskol.moviedroid.movies.SpotifyActivity"
            android:label="@string/title_activity_spotify"
            android:parentActivityName="com.cloudskol.moviedroid.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudskol.moviedroid.MainActivity" />
        </activity>
        <activity
            android:name="com.cloudskol.moviedroid.movies.MovieDetailsActivity"
            android:label="@string/title_activity_movie_details"
            android:parentActivityName="com.cloudskol.moviedroid.movies.SpotifyActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudskol.moviedroid.movies.SpotifyActivity" />
        </activity>
        <activity
            android:name="com.cloudskol.moviedroid.movies.MovieSettingsActivity"
            android:label="@string/title_activity_movie_settings"
            android:parentActivityName="com.cloudskol.moviedroid.movies.SpotifyActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudskol.moviedroid.movies.SpotifyActivity" />
        </activity>
    </application>

</manifest>
